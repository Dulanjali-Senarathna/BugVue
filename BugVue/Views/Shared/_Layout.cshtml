<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap-theme.css" rel="stylesheet" />

    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">BugView Demo</a>
            </div>
        </div>
    </div>

    <div class="container body-content" style="margin-top:70px">
        @RenderBody()
    </div>




    <script src="~/lib/jquery/jquery.min.js"></script>

    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

    <script src="~/lib/toastr.js/toastr.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
